// Allow authenticated users to upload post images and profile pictures.
// This is a minimal rule set for development. Tighten rules before production.
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to upload post images
    match /post_images/{allPaths=**} {
      allow read: if true;                        // public read (adjust if needed)
      allow write: if request.auth != null;       // only authenticated users can write
    }

    // Allow authenticated users to upload profile pictures
    match /profile_pictures/{allPaths=**} {
      allow read: if true;                        // public read for profile images
      allow write: if request.auth != null;       // only authenticated users can write
    }

    // Fallback: deny writes to unknown paths, allow reads publicly
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
